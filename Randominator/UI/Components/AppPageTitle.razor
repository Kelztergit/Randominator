<PageTitle>@this.GetMetaTitle()</PageTitle>

@code {
    [Parameter]
    public string Value { get; set; }
    [Parameter]
    public string HeaderOverride { get; set; }

    [CascadingParameter]
    public MainLayout BaseLayout { get; set; }

    private string GetMetaTitle()
    {
        if (string.IsNullOrWhiteSpace(this.Value))
            return AppInfo.Name;
        return $"{this.Value} - {AppInfo.Name}";
    }

    protected override void OnParametersSet()
    {
        string headerOverride = this.HeaderOverride ?? this.Value;
        if (this.BaseLayout != null && headerOverride != null)
            this.BaseLayout.Header.SetTitle(headerOverride);
    }
}